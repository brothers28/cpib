program progFactorial
global
   const input:int64;
   const result:int64;
   proc factorial(copy const value:int64, ref var factorial:int64)
   local
    var counter:int64
   do
    counter init := value;
    factorial := 1;
   while counter > 1 do
    factorial := factorial * counter;
    counter := counter - 1
   endwhile
  endproc
do
  debugin input init;
  call factorial([nat64] input, result init);
  debugout result
endprogram
