program exampleFactorial
global
   const input:int32;
   const result:nat32;
   const natInput:nat32;
   proc factorial(copy const value:nat32, ref var factorial:nat32)
   local
    var counter:nat32
   do
    counter init := value;
    factorial := [nat32] 1;
   while counter > [nat32] 1 do
    factorial := factorial * counter;
    counter := counter - [nat32] 1
   endwhile
  endproc
do
  debugin input init;
  natInput init := [nat32] input;
  call factorial(natInput, result init);
  debugout result
endprogram
